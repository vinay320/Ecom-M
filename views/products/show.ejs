<% layout('layouts/bolierplate')-%>

<div class="container">

<%- include('../partials/flash') -%>


</div>

<div class="row">
    <div class="col-lg-6">        
        <div class="card shadow-sm mx-auto"  style="width: 24rem;">
            <img src="<%=product.img%>" class="card-img-top" alt="product_image">
            <div class="card-body">
                <h5 class="card-title"><%=product.name%></h5>
                <h5 class="card-title">
                   $ <%=product.price%>
                </h5>
                <p class="card-text">
                        <%=product.desc%>
                </p>
                <button type="submit" class=" btn btn-success">Buy Now</button>
                <form class="d-inline-block" action="/user/<%=product._id%>/add" method="POST">
                <button type="submit" class="btn btn-secondary">Add To Card</button>
                </form>
                <%if(currentUser && currentUser.role==='seller' ){%>
                <a href="/products/<%=product._id%>/edit" class="btn btn-info">Edit</a>
                
                <form class="d-inline-block" action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <%}%>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <h1 class="display-6">
            Leave Your Review
        </h1>

        <form action="/products/<%=product._id%>/review" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Description</label>
                <textarea class="form-control" name="comment" id="desc" rows="3" required></textarea>
            </div>
            <button class="btn btn-success btn-sm">Submit</button>
        </form>

        <div class="my-3">
            <%for(let review of product.reviews){%>
                <div class="card mt-3">
                    <div class="card-body">
                        <p class="starability-result" data-rating="<%=review.rating%>">
                            Rated: <%=review.rating%>
                        </p>
                        <%if(review.createdAt){%>
                            <p class="text-muted"><%=review.createdAt.toDateString()%></p>
                        <%}%>
                        <p class="card-text"><%=review.comment%></p>
                        <%if(currentUser && currentUser.role==='seller' ){%>
                        <button class="btn btn-danger btn-sm">Delete</button>
                        <%}%>
                    </div>
                </div>
            <%}%>
        </div>
        

    </div>
</div>

