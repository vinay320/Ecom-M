<% layout('layouts/bolierplate')-%>

    <div class="row">
        
        <div class="col-md-6 mx-auto">
            <form action="/products/<%=product._id%>?_method=PATCH" class="needs-validation" method="POST" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Name: </label>
                    <input required value="<%=product.name%>" type="text" name="name" id="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image Url: </label>
                    <input required value="<%=product.img%>" type="text" name="img" id="img" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price: </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input required value="<%=product.price%>" type="number" name="price" id="price" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description: </label>
                    <textarea required rows="5" type="text" name="desc" id="desc" class="form-control">
                        <%=product.desc%>
                </textarea>
                </div>
                <button type="submit" class=" btn btn-sm btn-success">Update</button>
            </form>
        </div>
    </div>